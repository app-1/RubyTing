# More Variables and Printing
name = 'Appianin Obiri-Yeboah'
age = 22 # not a lie in 2018
height = 173 # centimetres (cm)
convert_cm_to_inches = 0.39
weight = 65 # kilograms (kg)
convert_kg_to_pounds = 2.21
eyes = 'Dark Brown'
teeth = 'White'
hair = 'Black'

puts "Let's talk about #{name}."
puts "He's #{height} centimetres tall which also equates to #{height * convert_cm_to_inches} inches."
puts "He's #{weight} kilograms heavy. He weighs the same as 65 kg of steel and 65 kg of feathers."
puts "In the imperial system value, Appi weighs #{weight * convert_kg_to_pounds} lbs."
puts "Actually that's not too heavy."
puts "He's got #{eyes} eyes and #{hair} hair."
puts "His teeth are usually #{teeth} because he doesn't not drink coffee."

# this line is tricky, try to get it exactly right

puts "If I add #{age}, #{height}, #{weight} I get #{age + height + weight}."

